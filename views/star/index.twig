{% extends 'layouts/_default.twig' %}

{% block main_content %}
    <h1>All stars:</h1>
    <ul>
        {% for star in stars %}
            <li>
                {{star.name}}-
                <a href="/stars/{{star.id}}">Show</a> | 
                <a href="/stars/{{star.id}}/edit">Edit</a> |
                <a href="/stars/{{star.id}}/delete">Delete</a>
            </li>
        {% endfor %}
    </ul>

    <a href="/stars/new">Discover New star</a>
{% endblock %}